<?xml version="1.0"?>
<robot name="bt7R" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Links -->

  <!-- Map Link -->
  <link name="map"/>

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.2"/>  <!-- Cube with 20cm sides -->
      </geometry>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>
  </link>

  <link name="link1" />

  <link name="link2">

    <!-- White Half -->
  <visual>
    <geometry>
      <sphere radius="0.05"/>
    </geometry>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </visual>

  <!-- Black Half -->
  <visual>
    <geometry>
      <sphere radius="0.05"/>
    </geometry>
    <origin xyz="0 0 0" rpy="0 0 1.57"/>  <!-- Rotate to cover half the sphere -->
    <material name="black">
      <color rgba="0 0 0 1"/>
    </material>
  </visual>
  </link>



